{
  "$schema": "http://json.schemastore.org/template",
  "author": "ChenShenChao",
  "classifications": [
    "Wpf",
    "Windows",
    "App",
    "File Log"
  ],
  "identity": "VSTemplate.WpfApp",
  "name": "VSTemplate(WpfApp)",
  "shortName": "vstemplate-wpfapp",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "WpfApp",
  "preferNameDirectory": false,
  "primaryOutputs": [
    {
      "path": "VSTemplate.sln"
    }
  ],
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**",
        "**/Targets/**",
        "**/Properties/**"
      ]
    },
    {
      "modifiers": [
        {
          "condition": "(!README)",
          "exclude": [
            "Readme.md"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "README": {
      "displayName": "添加 Readme.md 文件",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "提供 Readme.md 文件"
    }
  }
}
